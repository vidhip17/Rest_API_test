<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="EmployeesByDepartment" pageWidth="595" pageHeight="842"
              columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Fields from Employee -->
    <field name="name" class="java.lang.String"/>
    <field name="email" class="java.lang.String"/>
    <field name="position" class="java.lang.String"/>
    <field name="salary" class="java.lang.Double"/>

    <!-- Fields from Department -->
    <field name="departmentName" class="java.lang.String"/>
    <field name="departmentLocation" class="java.lang.String"/>

    <!-- Group by Department (must be declared here, before title) -->
    <group name="DepartmentGroup" isStartNewPage="true">
        <groupExpression><![CDATA[$F{departmentName}]]></groupExpression>
        <groupHeader>
            <band height="50">
                <textField>
                    <reportElement x="0" y="0" width="555" height="20"/>
                    <textElement>
                        <font size="16" isBold="true"/>
                    </textElement>
                    <textFieldExpression><![CDATA["Department: " + $F{departmentName}]]></textFieldExpression>
                </textField>
                <textField>
                    <reportElement x="0" y="25" width="555" height="20"/>
                    <textFieldExpression><![CDATA["Location: " + $F{departmentLocation}]]></textFieldExpression>
                </textField>
            </band>
        </groupHeader>
    </group>

    <!-- Title -->
    <title>
        <band height="50">
            <staticText>
                <reportElement x="0" y="10" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[Employees By Department Report]]></text>
            </staticText>
        </band>
    </title>

    <!-- Page Header: show current department on each page -->
    <pageHeader>
        <band height="30">
            <textField>
                <reportElement x="0" y="5" width="555" height="20"/>
                <textElement>
                    <font size="14" isBold="true"/>
                </textElement>
                <!-- Show current department on each page -->
                <textFieldExpression><![CDATA["Department: " + $F{departmentName}]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>

    <!-- Column Header for Employees -->
    <columnHeader>
        <band height="20">
            <staticText><reportElement x="0" y="0" width="100" height="20"/><text><![CDATA[name]]></text></staticText>
            <staticText><reportElement x="100" y="0" width="150" height="20"/><text><![CDATA[email]]></text></staticText>
            <staticText><reportElement x="250" y="0" width="150" height="20"/><text><![CDATA[position]]></text></staticText>
            <staticText><reportElement x="400" y="0" width="100" height="20"/><text><![CDATA[salary]]></text></staticText>
        </band>
    </columnHeader>

    <!-- Detail band to list employees -->
    <detail>
        <band height="20">
            <textField><reportElement x="0" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{name}]]></textFieldExpression></textField>
            <textField><reportElement x="100" y="0" width="150" height="20"/><textFieldExpression><![CDATA[$F{email}]]></textFieldExpression></textField>
            <textField><reportElement x="250" y="0" width="150" height="20"/><textFieldExpression><![CDATA[$F{position}]]></textFieldExpression></textField>
            <textField><reportElement x="400" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{salary}]]></textFieldExpression></textField>
        </band>
    </detail>

</jasperReport>
