<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="EmployeesByDepartment" pageWidth="595" pageHeight="842"
              columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <field name="name" class="java.lang.String"/>
    <field name="email" class="java.lang.String"/>
    <field name="position" class="java.lang.String"/>
    <field name="salary" class="java.lang.Double"/>

    <field name="departmentName" class="java.lang.String"/>
    <field name="departmentLocation" class="java.lang.String"/>

    <group name="DepartmentGroup" isStartNewPage="true">
        <groupExpression><![CDATA[$F{departmentName}]]></groupExpression>
        <groupHeader>
            <band height="30"> <textField>
                <reportElement x="0" y="5" width="555" height="20"/>
                <textElement>
                    <font size="16" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Department: " + $F{departmentName}]]></textFieldExpression>
            </textField>
            </band>
        </groupHeader>
    </group>

    <title>
        <band height="50">
            <staticText>
                <reportElement x="0" y="10" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[Employees By Department Report]]></text>
            </staticText>
        </band>
    </title>

    <pageHeader>
        <band height="30">
            <textField>
                <reportElement x="0" y="5" width="555" height="20"/>
                <textElement>
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Department: " + $F{departmentName}]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>

    <columnHeader>
        <band height="25">
            <staticText>
                <reportElement x="0" y="0" width="100" height="25" backcolor="#ADD8E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true" size="12"/>
                </textElement>
                <text><![CDATA[Name]]></text>
            </staticText>

            <staticText>
                <reportElement x="100" y="0" width="150" height="25" backcolor="#ADD8E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true" size="12"/>
                </textElement>
                <text><![CDATA[Email]]></text>
            </staticText>

            <staticText>
                <reportElement x="250" y="0" width="150" height="25" backcolor="#ADD8E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true" size="12"/>
                </textElement>
                <text><![CDATA[Position]]></text>
            </staticText>

            <staticText>
                <reportElement x="400" y="0" width="100" height="25" backcolor="#ADD8E6" mode="Opaque"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true" size="12"/>
                </textElement>
                <text><![CDATA[Salary]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="100" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{name}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="100" y="0" width="150" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{email}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="250" y="0" width="150" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{position}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="400" y="0" width="100" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{salary}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

</jasperReport>